
<view class="page">
    <view class="page__bd" style="background-color: #F0F4F3;">
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    <include src='main.wxml'/>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                     <include src='logs.wxml'/>
                     <!--document proid="{{projectID}}"></document -->
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                    <include src='document.wxml'/>
                </view>

            </view>
             <view class="bottom-tab flex-wrp flex-tab" style="bottom:0;">
                <block wx:for="{{tabs}}" wx:key="{{index}}">
                    <view id="{{index}}" class="bottomtab flex-item {{activeIndex == index ? 'active' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">
                            <image wx:if="{{activeIndex == index}}" class="icon" src="{{tabs[index].selectedIcon}}"/>
                            <image wx:else class="icon" src="{{tabs[index].icon}}"/>
                        </view>
                    </view>
                </block>
            </view>
        </view>
    
</view>