<!--index.wxml-->
<import src="../../components/refresher/refresher.wxml" />
<!--scroll-view scroll-y="true" class="container" bindscrolltoupper="upper" upper-threshold="10" lower-threshold="5" bindscrolltolower="lower"  scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}"-->



<block wx:if="{{!hasUserInfo}}">
    <image src="../../images/img/Astronaut.svg" style="width:50%;margin-left:25%;margin-top:10%"></image>
    <view class="welcome">
        <view class="welcome-text">The World is Yours</view>
        <view class="welcome-title-up">DEADLINE</view>
        <view clas="welcome-title-down">FIGHTER</view>
    </view>
    <view style="justify-content:center">
        <view class="welcome-bd-1"> <button size="mini" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo" style="color: #ffffff;background-color: #4285f4;font-size: 15px;padding: 0 2.5em;" >START</button></view>
    </view>
</block>



<block wx:if="{{hasUserInfo}}">
    <view class="container project-wrp">
        <view class="project-item">
            <view class="overview">
                <view class="left">
                    <view>
                        <image src="../../images/flag.png"></image>
                        <text>{{projects.length}}</text>
                    </view>
                </view>
                <view class="right" bindtap="createProject">
                    + {{Create_New}}
                </view>
            </view>
        </view>
    </view>
    <image src="../../images/img/social_networking.svg" style="width:60%;margin:-100rpx 20% -60rpx 20%"></image>
    <view class="weui-panel">
        <view class="weui-panel__bd">

            <slider-left wx:for="{{projects}}" wx:key="{{index}}" bind:change="handleChange" bind:delete="deletePro" data-icon="{{index}}" buttonText="{{Delete}}" data-id="{{item.proID}}">
                <view class="weui-media-box weui-media-box_text" bindtap="toProject" id="{{item.proID}}" hover-class="weui-cell_active">
                    <view class="flex-wrp">
                        <view class="flex-item weui-media-box__title weui-media-box__title_in-text" style="text-align: left; font-weight: bold; font-size:0.8rem;margin-bottom:4px;">{{item.proName}}</view>
                    </view>

                    <view class="weui-media-box__desc">{{item.proInfo}}</view>
                    <view class="weui-media-box__info">
                        <view wx:if="{{item.proType == 'Course'}}" class="weui-media-box__info__meta">{{Course}}</view>
                        <view wx:elif="{{item.proType == 'Intern'}}" class="weui-media-box__info__meta">{{Intern}}</view>
                        <view wx:elif="{{item.proType =='Work'}}" class="weui-media-box__info__meta">{{Work}}</view>
                        <view wx:else class="weui-media-box__info__meta">{{Others}}</view>
                        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{item.proEndDate}}</view>
                        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">
                            <block>
                                {{item.proMembers.length}} {{Members}}
                            </block>
                        </view>
                    </view>


                </view>
            </slider-left>

        </view>
    </view>
</block>
<!--/scroll-view-->