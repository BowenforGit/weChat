/**project.wxss**/
@import '../notify/notify.wxss';
.half {
  width: 50%;
  background-color: #fff;
  padding: 6px 0 6px 0;
  font-size: 34rpx;
}
.task-feed {
    padding: 0;
    font-size: 14rpx;
    background: #F0F4F3;
    color: #000;
}
.project-wrp{
    border-radius: 3px;
    box-shadow: 0 1px 2px #bebebe;
}
.project-item{
    width: 710rpx;
    padding: 10rpx 20rpx 10rpx;
    background: #52C980;
}

.project-item .pro-tag .tag{
    height: 28rpx;
    padding: 15rpx 20rpx;
    border-radius: 28rpx;
    margin: 0 10rpx;
    background: #EEF5F8;
    color: #52a341;
    font-size: 28rpx;
    vertical-align: middle;
}
.project-item .pro-title{
    padding: 40rpx 20rpx 30rpx;
    font-size: 38rpx;
    color: #ffffff;
}
.project-item .pro-content{
    padding: 0 20rpx 20rpx;
    font-size: 26rpx;
    color: #ffffff;
}
.project-item .pro-follow{
    margin: 20rpx;
    height: 68rpx;
}
.project-item .pro-follow view{
    display: inline-block;
    margin: 0 40rpx 0 0;
}

.project-item .pro-follow image{
    width: 50rpx;
    height: 50rpx;
    margin: 0 10rpx 0 0;
    vertical-align: middle;
}
.project-item .pro-follow .left{
    float: left;
    padding: 10rpx 0;
}
.project-item .pro-follow .left text{
    color: #AFAFAF;
    height: 50rpx;
    vertical-align: middle;
    padding: 18rpx 0;
    font-size: 24rpx;
}
.project-item .pro-follow .right{
    float: right;
    padding: 15rpx 40rpx;
    color: #ffffff;
    background: #52C980;
    border-radius: 3px;
    font-size: 26rpx;
    margin: 0;
}
.pro-operate{
    width: 750rpx;
    border-top: solid 1px #ebebeb;
    border-bottom: solid 1px #ebebeb;
    color: #889091;
    vertical-align: middle;
    background: #ffffff;
}
.pro-operate .flex-item{
    padding: 20rpx 0;
    font-size: 26rpx;
}
.pro-operate image{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    margin: 0 20rpx 0 0;
}
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 1px;
}

.show-member{
  margin-top:0;
}

.logs {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin: 0;
}

.item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
  color: #888;
}

.item:last-child {
  border-bottom: 0;
}

.timestamp {
  display: block;
  margin-top: 20rpx;
}

.name {
  display: inline-block;
  width: 30%;
  text-align: right;
  color: #92925B;
}

.action {
  display: inline-block;
  width: 70%;
  color: #CFDC28;
}

.log-container{
  display: block;
}

