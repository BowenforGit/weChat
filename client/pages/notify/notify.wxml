<!--logs.wxml-->
<view class="top-tab flex-wrp flex-tab">
    <view class="toptab flex-item {{currentNavtab==idx ? 'active' : ''}}" wx:for="{{navTab}}" wx:for-index="idx" wx:for-item="itemName" data-idx="{{idx}}" bindtap="switchTab">
        {{itemName}}
    </view>
</view>
<view class="container notify withtab">
    <view class="ctnt0" hidden="{{currentNavtab==0 ? '' : true}}">
            <block wx:if="{{todo.length == 0}}">
                <view style="background-color: #fff;">
                    <image src="../../images/img/messenger.svg" style="width:70%;margin:5rem 15% 0 15%"></image>
                    <view style="text-align:center; font-size:1rem; color:#999;">
                        No todo yet!
                    </view>                 
                </view>               
            </block>
            <block wx:else>  
                <navigator url="{{'/pages/task/task?id='+item.taskID}}" hover-class="weui-cell_active" wx:for="{{todo}}" wx:key="{{index}}">            
                    <view class="notify-item flex-wrp">
                        <view class="avatar flex-item">

                            <block wx:if="{{item.taskType == 'Presentation' || item.taskType == 'Task'}}">
                                <image src="../../images/icon/document.png"></image>
                            </block>
                            <block wx:elif="{{item.taskType == 'Report/Paper' || item.taskType == 'Meeting'}}">
                                <image src="../../images/icon/chat-bubble.png"></image>
                            </block>
                            <block wx:elif="{{item.taskType == 'Data Collection' || item.taskType == 'Activity'}}">
                                <image src="../../images/icon/event.png"></image>
                            </block>
                            <block wx:else>
                                <image src="../../images/icon/adventures_blue.png"></image>
                            </block>
                        </view>
                        <view class="notify-content flex-item">

                            <view class="notify-left">
                             
                                <text class="notify-title">{{item.taskName}}</text>
                                <text class="notify-source">{{item.proName ? item.proName : 'sample project name'}}</text>
                            </view>
                            <view class="notify-right weui-flex">
                                <text class="notify-date">{{item.due}}</text>
                                <image wx:if="{{item.taskLevel==2 }}" style="width:50rpx;height:50rpx;" src="../../images/icon/high-priority.png"></image>
                                <image wx:if="{{item.taskLevel==1 }}" style="width:50rpx;height:50rpx;" src="../../images/icon/medium-priority.png"></image>
                                <image wx:if="{{item.taskLevel==0 }}" style="width:50rpx;height:50rpx;" src="../../images/icon/low-priority.png"></image>
                            </view>
                        </view>
                    </view>
            </navigator>
        </block>
    </view>
    <view class="ctnt2" hidden="{{currentNavtab==1 ? '' : true}}">
        <block wx:if="{{missed.length == 0}}">
            <view style="background-color: #fff;">
                <image src="../../images/img/cleanup.svg" style="width:70%;margin:5rem 15% 0 15%"></image>
                <view style="text-align:center; font-size:1rem; color:#999;">
                    Nothing Missed!
                </view>                 
            </view>
        </block>
        <block wx:else>
        <navigator url="{{'/pages/task/task?id='+item.taskID}}" hover-class="weui-cell_active" wx:for="{{missed}}" wx:key="{{index}}">        
            <view class="notify-item flex-wrp">
                    <view class="avatar flex-item">
                        <block wx:if="{{item.taskType == 'Presentation' || item.taskType == 'Task'}}">
                            <image src="../../images/icon/document.png"></image>
                        </block>
                        <block wx:elif="{{item.taskType == 'Report/Paper' || item.taskType == 'Meeting'}}">
                            <image src="../../images/icon/chat-bubble.png"></image>
                        </block>
                        <block wx:elif="{{item.taskType == 'Data Collection' || item.taskType == 'Activity'}}">
                            <image src="../../images/icon/event.png"></image>
                        </block>
                        <block wx:else>
                            <image src="../../images/icon/adventures_blue.png"></image>
                        </block>
                    </view>
                    <view class="notify-content flex-item">

                        <view class="notify-left">
                        
                            <text class="notify-title">{{item.taskName}}</text>
                            <text class="notify-source">{{item.proName ? item.proName : 'sample project name'}}</text>
                        </view>
                        <view class="notify-right weui-flex">
                            <text class="notify-date">{{item.due}}</text>
                            <image wx:if="{{item.taskLevel==2 }}" style="width:50rpx;height:50rpx;" src="../../images/icon/high-priority.png"></image>
                            <image wx:if="{{item.taskLevel==1 }}" style="width:50rpx;height:50rpx;" src="../../images/icon/medium-priority.png"></image>
                            <image wx:if="{{item.taskLevel==0 }}" style="width:50rpx;height:50rpx;" src="../../images/icon/low-priority.png"></image>
                        </view>
                    </view>
                </view>           
            </navigator>
        </block>
    </view>
</view>