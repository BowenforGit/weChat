<!--pages/project/task/task.wxml-->
<view class="user flex-wrp">
  <view class="avatar flex-item">
    <image class="userinfo-avatar" src="{{userInfo.avatar}}" background-size="cover"></image>
    </view>
    <view class="user-info flex-item">
    <text class="userinfo-nickname">{{userInfo.name}}, {{Welcome}}</text>
    <text class="edit">{{may}}</text>
  </view>
</view>
<image src="../../images/img/may.svg" style="width:70%;margin:-1rem 15% -2rem 15%"></image>
<view class="weui-cells__title">{{setting}}</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
            <view class="weui-label">{{Lang}}</view>
        </view>
        <view class="weui-cell__bd">
            <picker mode="selector" value="{{langIndex}}" range="{{ lang }}"  bindchange="langChange">
                <view class="weui-input">{{lang[langIndex]}}</view>
            </picker>
        </view>
    </view>        
</view>
<view class="weui-cells__title">{{More}}</view>
<view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input" bindtap="showThanks">
        <view class="weui-cell__bd" >
            <view class="weui-input">{{github}}</view>
        </view>
    </view>
</view>

<navigator class="weui-cells weui-cells_after-title" style="margin-top: 10px;" open-type="navigate" hover-class="navigator-hover" url="./aboutus">
    <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd" >
            <view class="weui-input">{{aboutus}}</view>
        </view>
    </view>
</navigator>



