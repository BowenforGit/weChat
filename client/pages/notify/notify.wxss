.unread {
    color: #9A9C9B;
    height: 60rpx;
    padding: 10rpx 40rpx;
    text-align: left;
    width: 670rpx;
}

.unread text {
    display: inline-block;
    line-height: 60rpx;
    font-size: 22rpx;
}

.unread image {
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    float: right;
}

.notify-item {
    background: #ffffff;
    padding: 25rpx 25rpx 25rpx 0;
    border-bottom: solid 1px #ebebeb;
    align-items: center;
}

.notify-item image {
    width: 80rpx;
    height: 80rpx;
}

.notify-item .avatar {
    flex: 1;
}

.notify-item .notify-content {
    flex: 4;
    text-align: left;
    display: flex;
}

.notify-item .notify-content text {
    display: block;
}

.notify-item .notify-content .notify-source {
    color: #AFAFAF;
    font-size: 28rpx;
    padding: 2px 0 6rpx 0;
}

.notify-item .notify-content .notify-title {
    font-size: 32rpx;
    line-height: 36rpx;
}

.notify-item .notify-content .notify-date {
    padding-top: 0;
    color: #818A8F;
    font-size: 26rpx;
    text-align: right;
}

.notify-left {
    flex: 1;
}

.notify-right {
    flex: 1;
    flex-direction: column;
    align-items: flex-end;
}

.placehold {
    padding: 80rpx 0;
    font-size: 28rpx
}